#include <iostream>
#include <cmath>
using namespace std;

int massiv(int*arr, int size)

{

	for( int i =size-1; i>=0; --i)
	{
		if(i%2==0)
		{
		cout<<arr[i]<<" ";
        }}


for ( int j=0; j<size; ++j)
{
    if(j%2!=0)
    {
        cout<<arr[j]<<" ";
    }
}

}


int main()
{
	int array[8]{1,2,3,4,5,6,7,8};
	cout<<massiv(array,8);
	return 0;
}
